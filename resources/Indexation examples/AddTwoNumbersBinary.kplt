#define n=3

type Term {
    max {
        a_$b$_$p$ -> a_$b$_$p$ (Add) . :0<=p<n, 0<=b<=1
    }
}

type Add {
	max{
		2a_$b$_$p$ -> a_$b$_$p+1$ . :0<=p<n, 0<=b<=1
	}
}

termA {a_0_0, a_1_1, a_0_2} (Term) .  
termB {a_0_0, a_1_1, a_0_2} (Term) .  

add {} (Add) .

termA - add .
termB - add .

